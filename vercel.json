{
  "version": 2,
  "name": "binance-auto-trader",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_APP_URL": "https://your-app.vercel.app"
  },
  "regions": ["hkg1", "sfo1"],
  "build": {
    "env": {
      "NEXT_PUBLIC_APP_URL": "https://your-app.vercel.app"
    }
  },
  "functions": {
    "app/api/**": {
      "maxDuration": 30
    }
  }
}
